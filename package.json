{
  "name": "ralphban",
  "displayName": "Ralphban - Ralph's Kanban Board",
  "version": "1.0.0",
  "icon": "images/icon_128_128.png",
  "description": "An extension for visualizing tasks in a Kanban for LLM agents running in Ralph Wiggum mode",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run compile:prod",
    "compile": "tsc -p ./",
    "compile:prod": "rimraf out && tsc -p ./ && copyfiles -u 1 \"src/webview/*.{html,css,js}\" out && rimraf out/test",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "test": "node ./out/test/runTest.js",
    "test:slow": "SLOW_TESTS=true node ./out/test/runTest.js",
    "test:fast": "node ./out/test/runTest.js",
    "prepare": "husky"
  },
  "engines": {
    "vscode": "^1.100.0"
  },
  "activationEvents": [
    "onView:kanbanBoard",
    "onCommand:ralphban.openKanbanBoard",
    "onCommand:ralphban.createKanbanBoard",
    "onCommand:ralphban.refreshBoardList",
    "onCommand:ralphban.forceReopenBoard",
    "onStartupFinished"
  ],
  "publisher": "carlosiborra",
  "repository": {
    "type": "git",
    "url": "https://github.com/carlosiborra/ralphban.git"
  },
  "bugs": {
    "url": "https://github.com/carlosiborra/ralphban/issues"
  },
  "homepage": "https://github.com/carlosiborra/ralphban#readme",
  "keywords": [
    "kanban",
    "task",
    "project management",
    "visualizer",
    "prd",
    "tasks",
    "board",
    "drag-drop",
    "productivity"
  ],
  "categories": [
    "Other",
    "Visualization"
  ],
  "author": {
    "name": "Carlos Iborra Llopis",
    "email": "admin@carlosiborra.com",
    "url": "https://github.com/carlosiborra"
  },
  "license": "MIT",
  "badges": [
    {
      "url": "https://img.shields.io/badge/PRs-welcome-brightgreen.svg",
      "href": "https://github.com/carlosiborra/ralphban/blob/main/CONTRIBUTING.md",
      "description": "PRs Welcome"
    }
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ralphban-explorer",
          "title": "Ralphban",
          "icon": "images/icon_128_128.png"
        }
      ]
    },
    "views": {
      "ralphban-explorer": [
        {
          "id": "kanbanBoard",
          "name": "Kanban Board",
          "type": "webview"
        }
      ]
    },
    "commands": [
      {
        "command": "ralphban.openKanbanBoard",
        "title": "Open Kanban Board",
        "category": "Ralphban",
        "icon": "images/icon_128_128.png"
      },
      {
        "command": "ralphban.createKanbanBoard",
        "title": "Create New Kanban Board",
        "category": "Ralphban",
        "icon": "$(plus)"
      },
      {
        "command": "ralphban.refreshBoardList",
        "title": "Refresh Kanban Boards",
        "category": "Ralphban",
        "icon": "$(refresh)"
      },
      {
        "command": "ralphban.forceReopenBoard",
        "title": "Force Reopen Kanban Board (Test)",
        "category": "Ralphban"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "ralphban.refreshBoardList",
          "when": "view == kanbanBoard",
          "group": "navigation@1"
        },
        {
          "command": "ralphban.createKanbanBoard",
          "when": "view == kanbanBoard",
          "group": "navigation@2"
        }
      ],
      "editor/title": [
        {
          "command": "ralphban.openKanbanBoard",
          "when": "resourceExtname == .json && ralphban.isTaskFile",
          "group": "navigation"
        }
      ],
      "explorer/context": [
        {
          "command": "ralphban.openKanbanBoard",
          "when": "resourceExtname == .json && ralphban.isTaskFile",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Ralphban",
      "properties": {
        "ralphban.filePatterns": {
          "type": "array",
          "default": [
            "**/*.prd.json",
            "**/prd.json",
            "**/tasks.json"
          ],
          "description": "Glob patterns to identify task/PRD files in the workspace",
          "items": {
            "type": "string"
          }
        },
        "ralphban.categories": {
          "type": "array",
          "default": [
            "frontend",
            "backend",
            "database",
            "testing",
            "documentation",
            "infrastructure",
            "security",
            "functional"
          ],
          "description": "Custom categories available in the Kanban board dropdown",
          "items": {
            "type": "string"
          }
        },
        "ralphban.featureFlags.enablePercentageCounter": {
          "type": "boolean",
          "default": true,
          "description": "Show task completion percentage in the stats bar"
        },
        "ralphban.featureFlags.enableDragDrop": {
          "type": "boolean",
          "default": true,
          "description": "Enable drag and drop functionality for moving tasks between columns"
        },
        "ralphban.featureFlags.enableFilters": {
          "type": "boolean",
          "default": true,
          "description": "Enable search and filter functionality"
        }
      }
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.0.6",
    "@types/vscode": "^1.100.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "glob": "^11.0.0",
    "globals": "^17.0.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "mocha": "^11.7.5",
    "prettier": "^3.7.4",
    "rimraf": "^6.1.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "minimatch": "^10.1.1"
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
