{
  "name": "ralphban",
  "displayName": "Ralphban - Kanban Board Visualizer",
  "version": "1.0.0",
  "icon": "images/icon.png",
  "description": "An extension that reads task JSON files and visualizes them as an interactive Kanban board with drag-and-drop functionality",
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "engines": {
    "vscode": "^1.108.0"
  },
  "activationEvents": [
    "onCommand:ralphban.openKanbanBoard"
  ],
  "publisher": "ralphban-publisher",
  "keywords": [
    "kanban",
    "task",
    "project management",
    "visualizer"
  ],
  "author": "",
  "license": "ISC",
  "contributes": {
    "commands": [
      {
        "command": "ralphban.openKanbanBoard",
        "title": "Open Kanban Board",
        "category": "Ralphban",
        "icon": "images/icon.png"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "ralphban.openKanbanBoard",
          "when": "ralphban.isTaskFile",
          "group": "navigation@0"
        }
      ]
    },
    "configuration": {
      "title": "Ralphban",
      "properties": {
        "ralphban.filePatterns": {
          "type": "array",
          "default": ["**/*.prd.json", "**/prd.json", "**/tasks.json"],
          "description": "Glob patterns to identify task/PRD files in the workspace",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.6",
    "@types/vscode": "^1.108.1",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vscode/test-electron": "^2.5.2",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "marked": "^15.0.6"
  }
}
