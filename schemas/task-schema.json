{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.com/schemas/task-schema.json",
  "title": "Task List Schema",
  "description": "Schema for validating task JSON files used by the Kanban board extension",
  "type": "array",
  "items": {
    "$ref": "#/definitions/task"
  },
  "definitions": {
    "task": {
      "type": "object",
      "required": ["category", "description", "steps"],
      "properties": {
        "category": {
          "type": "string",
          "description": "The category of the task",
          "enum": [
            "frontend",
            "backend",
            "database",
            "testing",
            "documentation",
            "infrastructure",
            "security",
            "functional"
          ]
        },
        "description": {
          "type": "string",
          "description": "Description of the task",
          "minLength": 1
        },
        "steps": {
          "type": "array",
          "description": "List of steps to complete the task",
          "items": {
            "type": "string",
            "minLength": 1
          }
        },
        "dependencies": {
          "type": "array",
          "description": "List of task descriptions that this task depends on",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string",
          "description": "Current status of the task",
          "enum": ["pending", "in_progress", "completed", "cancelled"]
        },
        "passes": {
          "type": ["boolean", "null"],
          "description": "Whether the task passes its criteria"
        },
        "priority": {
          "type": "string",
          "description": "Priority level of the task",
          "enum": ["high", "medium", "low"]
        }
      }
    }
  }
}
